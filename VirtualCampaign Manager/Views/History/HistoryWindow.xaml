<telerik:RadWindow x:Class="VirtualCampaign_Manager.Views.History.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="Production History" Height="300" Width="600">
    <Grid>
        <DataGrid Margin="10" ItemsSource="{Binding ProductionHistoryList}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Film Name" Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Film ID" Binding="{Binding Path=FilmID}"/>
                <DataGridTextColumn Header="Production ID" Binding="{Binding Path=ID}"/>
                <DataGridTextColumn Header="Account" Binding="{Binding Path=Username}"/>
                <DataGridTextColumn Header="Account ID" Binding="{Binding Path=AccountID}"/>
                <DataGridTextColumn Header="Finished" Binding="{Binding Path=UpdateDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</telerik:RadWindow>