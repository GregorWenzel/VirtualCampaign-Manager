<Window x:Class="VirtualCampaign_Manager.SplashScreen.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualCampaign_Manager.SplashScreen"
        mc:Ignorable="d"
        Title="SplashScreenWindow" Height="200" Width="450" WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Virtual Campaign Manager" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"/>
            <Label Content="{Binding VersionString, StringFormat='Version {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
        </StackPanel>
        <Label Content="{Binding StatusString}" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
